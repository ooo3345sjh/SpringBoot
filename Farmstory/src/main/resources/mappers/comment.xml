<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.farmstory.dao.CommentDAO">
	<select id="selectAll" resultType="kr.co.farmstory.vo.CommentVO">
		SELECT * FROM `board_comment` WHERE parent = #{parent}
	</select>
	<select id="select" resultType="kr.co.farmstory.vo.CommentVO">
		SELECT * FROM `board_comment` WHERE no=#{no} AND parent = #{parent}
	</select>

	<select id="countAll" resultType="int">
		SELECT COUNT(*) FROM `board_comment` WHERE parent=#{parent}
	</select>

	<insert id="insert" parameterType="kr.co.farmstory.vo.CommentVO" useGeneratedKeys="true" keyProperty="no">
		INSERT INTO `board_comment` SET
			`parent`=#{parent},
			`comment`=#{comment},
			`uid`=#{uid},
			`nick`=#{nick},
			`regip`=#{regip},
			`rdate`=NOW()
	</insert>
	
	<delete id="delete" parameterType="java.lang.Integer">
		DELETE FROM `board_comment`
		WhERE `no` = #{no} AND `uid`=#{uid}
	</delete>
	
	<update id="update" parameterType="kr.co.farmstory.vo.CommentVO">
		UPDATE `board_article` SET
		`comment`=#{comment},
		`up_rdate`=NOW()
		WHERE `no`=#{no} AND `uid`=#{uid}
	</update>
</mapper>